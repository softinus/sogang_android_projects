<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/ui_help_background">

  <ImageView
  android:id="@+id/img_help"
  android:layout_x="103px"
  android:layout_y="17px"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:src="@drawable/ui_help_screen_01"
  ></ImageView>

  	<Button
		android:id="@+id/btn_help_next"
		android:text="Back"
		android:textSize="18sp"
		android:textColor="#000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_x="680px"
		android:layout_y="30px"
	></Button>


<RelativeLayout
android:layout_width="fill_parent"
android:layout_height= "wrap_content"
android:background= "#44000000"
android:layout_y="425px"
>
	<TextView
		android:id="@+id/txt_help_detail"
		android:text="Sample Text"
		android:background="#99000000"
		android:textColor="#ffffff"
		android:textSize="23sp"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	></TextView>
</RelativeLayout>

</AbsoluteLayout>
